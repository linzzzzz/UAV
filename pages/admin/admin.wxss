/* package-admin/admin/admin.wxss */

/*图片导航开始*/  
.nav-container{
  width:750rpx;
  height:340rpx;
  background-image: "/static/admin-blue.png";
  background:linear-gradient(180deg,rgba(81,126,246,1) 0%,rgba(54,85,245,1) 100%);
  float: left;
  position: relative;
  z-index: 1;
}
.nav-container image{
  opacity: 0.2;
  width:251px;
  height:130px;
  position: absolute;
  top: 80rpx;
  left: 0;
  z-index: 2;
}
.nav-container .title{
  background:linear-gradient(180deg,rgba(255,255,255,0.45) 0%,rgba(255,255,255,0) 100%);
  border-radius:16px 16px 0px 0px;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  position: absolute;
  bottom: 20rpx;
  right: 32rpx;
  text-align: center;
  padding: 24rpx;
  z-index: 3;
}
/*导航结束*/

/*内容开始*/
.content-container{
  width: 100%;
  background:rgba(250,251,253,1);
  z-index: 4;
  position: absolute;
  top: 340rpx;
  transform: translateY(-20rpx);
  border-radius: 20rpx 20rpx 0 0;
  padding: 0 32rpx 100rpx;
  box-sizing: border-box;
}

/*用户信息*/
.avator-container{
  height: 174rpx;
  width: 100%;
  border-bottom: 2rpx solid rgba(240,241,246,1);
  background-color:rgba(250,251,253,1);
  display: flex;
}
.img-container{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #fff;
  padding: 4rpx;
  box-sizing: border-box;
  transform: translateY(-42rpx)
}
.avator{
  width: 172rpx;
  height: 172rpx;
  border-radius: 50%
}
.name-container{
  padding: 15rpx 24rpx;
}


/*测试成绩*/
.achievement{
  padding-top: 64rpx;
}
.mocktest{
  padding-bottom: 64rpx;
  border-bottom: rgba(240,241,246,1) solid 2rpx;
}
.achievement-title{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items: center
}

.all-container{
  display: flex;
  flex-direction:row;
  align-items:baseline;
}
.all-container image{
  width: 12rpx;
  height: 22rpx;
  margin-left: 18rpx;
}
.testscores{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  margin-top: 48rpx;
}
.testscores-container{
  width:334rpx;
  height:368rpx;
  background:rgba(240,241,246,1);
  border-radius:8rpx;
  float: left
}
.test-title{
  width: 100%;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  background:rgba(50,82,245,1);
  border-radius:8rpx 8rpx 0rpx 0rpx;
}
.orange{
  background:rgba(232,121,64,1);
}

.scores-container{
  padding: 32rpx 48rpx;
}
.score-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.score{
  font-size:66rpx;
  font-family:DINAlternate-Bold,DINAlternate;
  font-weight:bold;
  color:rgba(0,0,0,1);
  margin-right: 8rpx
}
.usetime{
  background:rgba(51,51,51,1);
  border-radius:4rpx;
  padding: 8rpx 16rpx;
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin: 32rpx 0;
}


/*底部跳转*/
.bottom-jump{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  padding: 48rpx 0;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(159,164,185,1);
  border-bottom: rgba(240,241,246,1) solid 2rpx;
}
.bottom-jump image{
  width: 30rpx;
  height: 30rpx;
}

.shadow{
  width: 100%;
  height: 2rpx;
  background-color: red;
}


/*内容结束*/